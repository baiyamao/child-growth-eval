{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "outDir": "dist",            // 输出到 dist 文件夹
    "rootDir": "src",            // 源码在 src 下
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
